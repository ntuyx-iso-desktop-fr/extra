# Depends on: coreutils gawk grep pciutils procps-ng sed file lm-sensors iproute2 kmod sudo usbutils kmod xorg-xdpyinfo xorg-xprop xorg-xrandr

description="script to get system information"
url="http://inxi.org"
packager="remy <remy@nutyx.org>"
contributors="Greg, Tnut"

name=inxi
version=3.0.26
release=1

source=(https://github.com/smxi/inxi/archive/${version}-1.tar.gz)

build() {

  cd $SRC
  
  install -D -m755 inxi $PKG/usr/bin/inxi
  install -D -m755 inxi.1 $PKG/usr/share/man/man1/inxi.1
  
}

